    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        
        <!-- Android Theme-->
        <item name="colorPrimaryDark">@color/colorTsinghuaPurple</item>
        <item name="colorAccent">@color/colorTsinghuaPurple</item>

        <!--QMUI Theme-->
        <item name="qmui_dialog_negative_action_text_color">@color/colorTsinghuaPurple</item>
        <item name="qmui_dialog_positive_action_text_color">@color/colorTsinghuaPurple</item>
        <item name="qmui_skin_support_round_btn_border_color">@color/colorTsinghuaPurple</item>
        <item name="qmui_skin_support_round_btn_text_color">@color/colorTsinghuaPurple</item>

        
    </style>

    <style name="chat_item_send_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="chat_text_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">#555756</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="jmui_chat_item_sender_avatar_style">
        <item name="android:layout_width">@dimen/item_head_icon_size</item>
        <item name="android:layout_height">@dimen/item_head_icon_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:src">@drawable/default_avata</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="jmui_msg_text_style">
        <item name="android:maxWidth">225dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8.67dp</item>
        <item name="android:textColor">@color/chatText_color</item>
    </style>
    <style name="jmui_chat_item_receive_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="jmui_chat_item_receiver_avatar_style">
        <item name="android:layout_width">@dimen/item_head_icon_size</item>
        <item name="android:layout_height">@dimen/item_head_icon_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:src">@drawable/default_avata</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="jmui_chat_display_name_style">
        <item name="android:ems">5</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#B3B3B3</item>
        <item name="android:textSize">12sp</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
